{
  "env": {
    "browser": false,
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "eqeqeq": "off",
    "curly": "error",
    "quotes": [
      "error",
      "single"
    ]
  }
}
